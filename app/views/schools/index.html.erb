<div class="back-img">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-offset-2 col-sm-8">
          <div class="styletitle">
            <% if School.search_by_city("#{params[:query]}").count != 0 %>
              <h3 class="text-center"> Escolas em <%=@schools.first.city%> </h3>
            <% else %>
              <h3 class="text-center"> Ainda não temos escolas cadastradas em <%= "#{params[:query]}" %> </h3>
            <%end%>
          </div>
          <% @schools.each do |school|%>
              <div class="details col-xs-12 col-md-offset-3 col-sm-8">
                <a href=<%= school_path(school) %>>
                <div class="card-wrapper">
                  <div class="imagewrap">
                    <%= cl_image_tag school.photo, height: 115, width: 115, crop: :fill  %>
                  </div>
                  <div class="schoolinfo">
                    <div class="school-name"> <%= link_to school.name, school_path(school) %> </div>
                    <div class="stars"> <p> <% empty = 5 - school.reviews.average(:rating).to_i %>
                      <% school.reviews.average(:rating).to_i.times do %>
                        <i class="fas fa-star"></i>
                      <% end %>
                      <% empty.times do %>
                        <i class="far fa-star"></i>
                      <% end %> </p> </div>
                    <div class="nota"> <%= school.reviews.count %> avaliações </div>
                    <div class="nota"> Média: <%= school.reviews.average(:rating).to_f.round(1) %> </div>
                  </div>
                </div>
            </div>
          <%end%>
      </div>
    </div>
  </div>
</div>

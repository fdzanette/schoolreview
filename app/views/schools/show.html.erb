<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="name-wrap">
        <div class="name">
        <h4> Escola <%= @school.name%> </h4>
        </div>
        <div class="link-voltar">
          <%= link_to "Voltar", schools_path %>
        </div>
      </div>
       <p> <% empty = 5 - @reviews.average(:rating).to_i %>
                  <% @reviews.average(:rating).to_i.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                  <% empty.times do %>
                    <i class="far fa-star"></i>
                  <% end %> (<%= @school.reviews.count %> Avaliações) </p>
      <h5> Endereço: <%= @school.address %></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="aval-row">
        <div> <h5>Avaliações </h5> </div>
        <div> <h5> <%= link_to "Deixe a sua avaliação", new_school_review_path(@school), class: "btn btn-primary" %></h5> </div>
      </div>
        <% @reviews.each do |review| %>
          <% user = review.user_id%>
            <div class="message">
              <div class="message-name">
              <h3><%= User.find(user).email %></h3>
              <p><%= review.created_at %></p>
              </div>
              <div class="message-body">
                <p><strong><%= review.content %></strong></p>
                <p><%= review.rating %></p>
              </div>
            </div>
        <%end%>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="map-wrap">
        <h4> Localização: </h4>
          <div id="map" style="width: 100%; height: 400px;"
          data-markers="<%= @markers.to_json %>">
          </div>
      </div>
    </div>
  </div>
</div>


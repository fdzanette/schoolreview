<div class="back-img">
  <div class="container">
    <div class="col-xs-12 col-md-offset-4 col-md-4">
      <div class="text-center">
        <h3>Cadastro</h3>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs", style="color: white;">
          <%= f.input :name, label: "Nome", autofocus: true %>
          <%= f.input :age, label: "Idade", required: true %>
          <%= f.input :email, required: true %>
          <%= f.input :school_id, label: "Escola", :collection => @schools, required: true %>
          <%= f.input :password, label: "Senha", required: true, hint: ("MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length), class: "text-white" %>
          <%= f.input :password_confirmation, label: "Confirme a senha", required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Cadastrar", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>

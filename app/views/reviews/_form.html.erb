<div class="container">
  <%= simple_form_for [@school, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Add a Review", class: "btn btn-primary" %>
  <% end %>
</div>
